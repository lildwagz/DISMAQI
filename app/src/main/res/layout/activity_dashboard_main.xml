<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".dashboard.DashboardMain">

    <androidx.appcompat.widget.Toolbar

        android:background="#3F51B5"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:gravity="start|center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView

                android:src="@drawable/ic_person"
                android:layout_width="80dp"
                android:layout_height="60dp"/>

            <LinearLayout
                android:gravity="left"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#ffff"
                    android:layout_marginRight="10dp"
                    android:id="@+id/txt_hellouser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hi, Asep Septiadi,S.kom."
                    android:textSize="23sp" />

                <TextView
                    android:layout_marginRight="10dp"
                    android:id="@+id/txt_descriplembaga"
                    android:layout_width="match_parent"
                    android:textColor="#FFFFFF"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/junge"
                    android:text="Guru di SMKI Rabbanii islamic School"
                    android:textSize="14sp" />



            </LinearLayout>


        </LinearLayout>





    </androidx.appcompat.widget.Toolbar>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Ketuk  + untuk menambahkan penilaian siswa"
            android:textSize="20sp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_addpenilaian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_floating"
            app:elevation="7dp"
            app:pressedTranslationZ="12dp" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>




</androidx.coordinatorlayout.widget.CoordinatorLayout>